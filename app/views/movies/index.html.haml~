-# This file is app/view/movies/index.html.haml
%h1 All Movies

%input{:type=>"hidden", :value=>params[:ratings], :name=>:ratings}
= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",1, @selected_ratings.include?(rating) 
  = submit_tag 'Refresh'


%table#movies
  %thead
    %tr
      %th{:type=>"hidden", :value=>params[:sort], :name=>:sort}= link_to "Movie Title", :sort => "title", :id => 'title_header'
      %th Rating
      %th{:type=>"hidden", :value=>params[:sort], :name=>:sort}= link_to "Release Date", :sort => "release_date", :id => 'date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path


